<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MainFragment">

    <fragment
        android:id="@+id/MainFragment"
        android:name="com.example.minismarthome.MainFragment"
        android:label=" "
        tools:layout="@layout/activity_main">

        <action
            android:id="@+id/action_main_to_options"
            app:destination="@id/OptionsFragment" />
    </fragment>
    <fragment
        android:id="@+id/OptionsFragment"
        android:name="com.example.minismarthome.OptionsFragment"
        android:label="OPTIONS"
        tools:layout="@layout/options_fragment">

        <action
            android:id="@+id/options_to_main"
            app:destination="@id/MainFragment" />
    </fragment>

</navigation>