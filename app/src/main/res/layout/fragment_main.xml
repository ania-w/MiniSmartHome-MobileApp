<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bez_nazwy_1"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/bez_nazwy_2"
            android:gravity="center"
            android:orientation="horizontal"
            android:textAlignment="center">

            <TextView
                android:id="@+id/temperatureTV"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/allerta"
                android:text="@string/textview"
                android:textAlignment="center"
                android:textColor="@color/purple_main"
                android:textSize="50sp"
                tools:ignore="SpeakableTextPresentCheck"
                tools:text="25C" />

            <TextView
                android:id="@+id/humidityTV"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/allerta"
                android:text="@string/textview"
                android:textAlignment="center"
                android:textColor="@color/purple_main"
                android:textSize="50sp"
                tools:text="42%" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/bez_nazwy_2"
            android:gravity="center|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dimmerIpLabel"
                android:layout_width="115dp"
                android:layout_height="39dp"
                android:fontFamily="@font/allerta"
                android:text="@string/co2label"
                android:textAlignment="center"
                android:textColor="@color/purple_500"
                android:textSize="30sp"
                tools:text="CO2" />

            <TextView
                android:id="@+id/co2TV"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="45dp"
                android:fontFamily="@font/allerta"
                android:text="@string/textview"
                android:textAlignment="center"
                android:textColor="@color/purple_500"
                android:textSize="30sp"
                tools:text="CO2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/bez_nazwy_2"
            android:gravity="center|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvocTVlabel"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/allerta"
                android:text="@string/tvoclabel"
                android:textAlignment="center"
                android:textColor="@color/purple_500"
                android:textSize="30sp"
                tools:text="TVOC" />

            <TextView
                android:id="@+id/tvocTV"
                android:layout_width="169dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="45dp"
                android:fontFamily="@font/allerta"
                android:text="@string/textview"
                android:textAlignment="center"
                android:textColor="@color/purple_500"
                android:textSize="30sp"
                tools:text="TVOC" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/bez_nazwy_2"
            android:gravity="center"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="68dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/toppng_com_noun_project_lightbulb_icon_1263005_cc_lightbulb_icon_686x839"
                app:tint="#6A5E80" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                tools:layout_editor_absoluteX="146dp"
                tools:layout_editor_absoluteY="507dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/li100"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:layout_margin="4dp"
                        android:backgroundTint="#AEEFD8"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                    <Button
                        android:id="@+id/li60"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:layout_margin="4dp"
                        android:backgroundTint="#7CE4C1"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                    <Button
                        android:id="@+id/li35"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:layout_margin="4dp"
                        android:backgroundTint="#6FD1AF"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                    <Button
                        android:id="@+id/li15"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:layout_margin="4dp"
                        android:backgroundTint="#52A88A"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                    <Button
                        android:id="@+id/li0"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:layout_margin="4dp"
                        android:backgroundTint="#398067"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="100dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:text="0%"
                        android:textColor="#A4787878"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.887"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_weight="1"
                        android:text="100%"
                        android:textColor="#A4787878"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.037"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="264dp"
            android:layout_marginVertical="10dp"
            android:background="@color/common_google_signin_btn_text_light_default"
            android:backgroundTint="#ABFFFFFF"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/catto"
                android:layout_width="match_parent"
                android:layout_height="264dp"
                android:contentDescription="catto"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>